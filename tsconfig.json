{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "strict": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "dummy/tests/*": ["tests/*"],
      "dummy/*": ["tests/dummy/app/*", "app/*"],
      "@ef4/ember-orbit": ["addon"],
      "@ef4/ember-orbit/*": ["addon/*"],
      "@ef4/ember-orbit/test-support": ["addon-test-support"],
      "@ef4/ember-orbit/test-support/*": ["addon-test-support/*"],
      "@ember/destroyable": ["node_modules/ember-destroyable-polyfill"],
      "*": ["types/*"]
    }
  },
  "include": [
    "addon/**/*",
    "tests/**/*.ts",
    "types/**/*",
    "test-support/**/*",
    "addon-test-support/**/*"
  ]
}
